@model List<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista kontaktów</h1>
<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Email</th>
            <th>Data urodzin</th>
            <th>Nr telefonu</th>
            <th>Kategoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.Birth</td>
                <td>@contact.Phone</td>
                <td>@contact.Priority</td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@contact.Id">Szczegóły</a>
                    <a class="btn btn-primary" asp-action="Update" asp-route-id="@contact.Id">Edytuj</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@contact.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>