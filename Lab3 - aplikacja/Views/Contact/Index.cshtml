@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista kontaktów</h1>
<div>
    <table>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Email
            </th>
            <th>
                Data urodzenia
            </th>
            <th>
                Telefon
            </th>
            <th>
                Akcja
            </th>
        </tr>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Value.Name
                </td>
                <td>
                    @item.Value.Email
                </td>
                <td>
                    @item.Value.Birth
                </td>
                <td>
                    @item.Value.Phone
                </td>
                <td>
                    @item.Value.Email
                </td>
                <td>
                    <a class="btn btn-outline-primary"
                       asp-action="Edit"
                       asp-controller="Contact"
                       asp-route-id=@item.Value.Id>Edytuj</a>
                    <a class="btn btn-outline-primary"
                       asp-action="Details"
                       asp-controller="Contact"
                       asp-route-id=@item.Value.Id>Szczegóły</a>
                    <a class="btn btn-danger"
                       asp-action="Delete"
                       asp-controller="Contact"
                       asp-route-id=@item.Value.Id>Usuń</a>
                </td>
            </tr>
        }
    </table>
</div>